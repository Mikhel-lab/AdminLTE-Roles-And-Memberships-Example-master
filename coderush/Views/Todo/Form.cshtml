@model Todo
@{
    ViewData["Title"] = "Todo Form";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewData["Title"]
        </h1>
        <p>
            @await Html.PartialAsync(PartialView.StatusMessage, TempData[StaticString.StatusMessage])
        </p>

    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <form asp-controller="Todo" asp-action="SubmitForm" method="post">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Create or edit existing todo item</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <input type="hidden" asp-for="TodoId" />
                    <div class="form-group">
                        <label asp-for="TodoItem"></label>
                        <input asp-for="TodoItem" class="form-control" />
                        <span asp-validation-for="TodoItem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Is Done</label>
                        <input asp-for="IsDone" type="checkbox" class="flat-red" />
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <a href="/Todo/Index" class="btn btn-default">Back</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <!-- /.box-footer-->
            </div>
        </form>

        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Styles{

}


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}


